{
  "id": "${info.app.name}-${info.app.version}",
  "name": "${info.app.name}",
  "provides": [
    {
      "id": "licenses",
      "version": "${info.app.minorVersion}",
      "handlers" : [
        {
          "methods": ["GET", "DELETE", "POST", "PUT"],
          "pathPattern": "/licenses/*"
        }
      ]
    },{
      "id": "erm-org",
      "version": "1.0",
      "handlers": [
        {
          "methods": ["GET", "POST"],
          "pathPattern": "/erm-org/content",
          "modulePermissions": [ "vendor.collection.get" ]
        },{
          "methods": ["GET"],
          "pathPattern": "/erm-org/find/{name}",
          "modulePermissions": [ "vendor.collection.get" ]
        }
      ]
    },{
      "id" : "_tenant",
      "version" : "1.2",
      "interfaceType" : "system",
      "handlers" : [ {
          "methods" : [ "POST", "DELETE" ],
          "pathPattern" : "/_/tenant"
        }, {
         "methods" : [ "POST" ],
         "pathPattern" : "/_/tenant/disable"
        }
      ]
    }
  ],
  "permissionSets": [
    {
      "permissionName": "module.erm-stripes.enabled",
      "displayName": "OLF License",
      "description": "Base property to enable any access the OLF License module",
      "visible": false
    },
    {
      "permissionName": "mod-licenses.user",
      "displayName": "OLF License - User",
      "description": "A user of OLF License",
      "subPermissions": [
        "module.license-stripes.enabled"
      ],
      "visible": true
    }
  ],
  "launchDescriptor": {
    "dockerImage": "${info.app.name}:${info.app.version}",
    "dockerArgs": {
      "HostConfig": {
        "Memory": 805306368,
        "PortBindings": { 
          "8080/tcp":  [{ "HostPort": "%p" }] 
        }
      }
    },
    "dockerPull" : false,
    "env": [
      { "name": "JAVA_OPTIONS", "value": "-server -Xmx384M -XX:MaxMetaspaceSize=192M -XX:MaxDirectMemorySize=128M -XX:+PrintFlagsFinal" },
      { "name": "DB_HOST", "value": "postgres" },
      { "name": "DB_PORT", "value": "5432" },
      { "name": "DB_USERNAME", "value": "folio_admin" },
      { "name": "DB_PASSWORD", "value": "folio_admin" },
      { "name": "DB_DATABASE", "value": "okapi_modules" },
      { "name": "DB_MAXPOOLSIZE", "value": "50" }
    ]
  }
}
